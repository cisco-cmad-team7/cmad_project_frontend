pipeline{

    agent none

    stages{

        stage('build'){
            agent{
            docker {
            image 'node:6-alpine'
            args '-p 3001:3001'
            }
            }

            steps{
                echo 'building worker app'
                sh 'npm install'

            }
        }
        stage('test'){
            agent{
            docker {
            image 'node:6-alpine'
            args '-p 3001:3001'
            }
            }
            steps{
                echo 'running unit tests on worker app'
                  sh 'npm test'

            }
        }
        stage('run'){
            agent{
            docker {
            image 'node:6-alpine'
            args '-p 3001:3001'
            }
            }
            steps{
                echo 'running unit tests on worker app'
                  sh 'npm start'

            }
        }

        stage('docker-package'){
            agent any
            steps{
              echo 'Packaging worker app with docker'
              script{
                docker.withRegistry('https://index.docker.io/v1/', 'DOCKER') {
                    def workerImage = docker.build("teslaazad/cmad-cisco-frontend:v${env.BUILD_ID}")
                    workerImage.push()
                    workerImage.push("latest")
                }
              }
            }
        }
    }

    post{
        always{
            echo 'the job is complete'
        }

    }

}
